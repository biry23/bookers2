<div class="container">
  <div class="row">
    <div class="px-3 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <p>Name</p>
      <%= f.text_field :name %>
      <p>Image</p>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      <p>Introduction</p>
      <%= f.text_area :introduction %>
      <p><%= f.submit 'Update User' %></p>
      <% end %>
    </div>
  </div>
</div>