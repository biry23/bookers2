<div class="container">
  <div class="row">
    <div class="px-3 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <h2><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
      <p>Name</p>
      <%= f.text_field :name %>
      <p>Image</p>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      <p>Introduction</p>
      <%= f.text_area :introduction %>
      <p><%= f.submit 'Update User' %></p>
      <% end %>
    </div>
  </div>
</div>