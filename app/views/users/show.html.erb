<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(63, 63) %>
      <p>name  <%= current_user.name %></p>
      <p>introduction  <%= current_user.introduction %></p>

      <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fa-solid fa-user-gear"></i>
      <% end %>

      <h2>New book</h2>
      <%= form_with model: Book.new do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :opinion %>
      <p><%= f.submit 'Create Book' %></p>
      <% end %>
      <div class="col-md-8">
        <h2>Books</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <th><%= image_tag current_user.get_profile_image(40, 40) %></th>
            <th><%= link_to @book.title, book_path(@book) %></th>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>