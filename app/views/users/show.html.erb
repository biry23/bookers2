<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'layouts/list', user: @user %>

      <h2>New book</h2>
      <%= form_with model: Book.new do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :body %>
      <p><%= f.submit 'Create Book' %></p>
      <% end %>
    </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <th>
                <%= link_to user_path(book.user) do %>
                <%= image_tag @user.get_profile_image(40, 40)  %>
                <% end %>
              </th>
              <th><%= link_to book.title, book_path(book.id) %></th>
              <th><%= book.body %></th>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>