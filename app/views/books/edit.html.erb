<div class="container">
  <div class="row">
    <div class="px-3 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :opinion %>
      <p><%= f.submit 'Update Book' %></p>
      <%= link_to "Show", book_path(@book.id) %> |
      <%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>