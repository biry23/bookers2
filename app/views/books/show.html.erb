<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(63, 63) %>
      <p>name  <%= current_user.name %></p>
      <p>introduction  <%= current_user.introduction %></p>

      <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fa-solid fa-user-gear"></i>

      <% end %>

      <h2>New book</h2>
      <%= form_with model: Book.new do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p>Opinion</p>
      <%= f.text_area :opinion %>
      <p><%= f.submit 'Create Book' %></p>
      <% end %>
    </div>

    <div class="col-md-8">
      <h2>Book detail</h2>
      <table class="table table-striped">
        <tbody>
          <tr>
            <td>
              <p><%= image_tag current_user.get_profile_image(40, 40) %></p>
              <p><%= link_to "@user.name", user_path(@user.id) %></p>
            </td>
            <td><%= link_to "@book.title", book_path(@book.id) %></td>
            <td><%= @book.opinion %></td>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <% if @book.user == current_user %>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
